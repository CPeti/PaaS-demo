FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source so the container starts with valid code.
# Tilt's live_update sync() will overlay changes on top without a full rebuild.
COPY app/ ./app/

EXPOSE 8000

# --reload watches /app/app for file changes and restarts automatically
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
